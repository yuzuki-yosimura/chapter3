<h1>Editing Book</h1>
<%= form_for(@book, url:"/books/#{@book.id}/edit") do |b| %>
    <h4>Title</h4>
    <%= b.text_field :title %>
    <h4>Body</h4>
    <%= b.text_area :body %><br>
    <%= b.submit 'Update Book' %>
<% end %>
<%=link_to "Show", bookers_path(@book.id) %>
<%= link_to "Back", books_path %>
